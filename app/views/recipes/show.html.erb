
<div class="container-fluid">

<div class="show-page">
<div class="row">

<div class="col-md-4">
<div class="show-box-1">
  <p id="notice"><%= notice %></p>
    <% if @recipe.image? %>
      <%= image_tag @recipe.image.url, class: "recipe-show" %>
    <% end %>

  <h1>
    <strong>Title:</strong>
      <%= @recipe.title %>
  </h1>

  <p>
    <strong>Description:</strong>
      <%= @recipe.description %>
  </p>
</div><!--show-box-1-->
</div><!--col-md-4-->


<div class="col-md-4">
<div class="show-box-2">

<div class="show-buttons">
  <button class="button button1"><%= link_to 'Edit', edit_recipe_path(@recipe) %></button> |
  <button class="button button1"><%= link_to 'Back', recipes_path %></button>
</div><!--show-buttons-->

<h3>Ingredients</h3>
  <ul>
    <% for @ingredient in @recipe.ingredients %>
    <li><%= @ingredient.content %></li>
    <% end %>
  </ul>

</div><!--show-box-2-->
</div><!--col-md-4-->


<div class="col-md-4">
<div class="show-box-3">
<h3>Steps</h3>
  <ol>
    <% for @step in @recipe.steps %>
    <li><%= @step.direction %></li>
    <% end %>
  </ol>
</div><!--show-box-3-->
</div><!--col-md-4-->


</div><!--row-->
</div><!--show-page-->
</div><!--/container-->
