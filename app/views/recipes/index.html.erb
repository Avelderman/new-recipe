<div class="container-fluid">


<div class="row">
<div class="upper-page">
<p id="notice"><%= notice %></p>

    <div class="col-md-7">
        <h1>Recipes</h1>
    </div>

</div><!--upper-page-->
</div><!--/row-->



<div class="row">
    <% @recipes.each do |recipe| %>

<div class="col-md-4">


<div class="col-md-9">
  <div class="recipe-box">
    <% if recipe.image? %>
      <%= link_to (image_tag recipe.image.url, class: "recipe-index"), recipe %>
    <% end %>

    <h1><%= recipe.title %></h1>
    
  </div><!-- /recipe-box-->
</div><!--col-md-9-->


  <div class="col-md-3">
  <div class="word-box">
    <ul>
      <h1><%= recipe.title %></h1>
            <br>
      <li><%= recipe.description %></li>
            <br>
            <br>
            <br>
      <li><button class="button button1"><%= link_to 'Edit', edit_recipe_path(recipe) %></button></li>
            <br>
            <br>
      <li><button class="button button1"><%= link_to 'Show', recipe %></button></li>
            <br>
            <br>
    <li><button class="button button2"><%= link_to 'Destroy',  recipe,  method: :delete, data: { confirm: 'Are you sure?' } %></button></li>
    </ul>
  </div><!--word-box-->
  </div><!--col-md-3-->


</div><!--col-md-4-->


    <% end %>
</div><!--/row-->

<br>
<br>
</div>
